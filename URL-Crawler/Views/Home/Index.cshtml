@model UrlFormModel

@{
    ViewData["Title"] = "URL Crawler";
}

@* Kept in index to prevent needing to rebind AJAX if reloaded for error. *@
@using (Html.BeginForm("GetUrlContent", "Home", FormMethod.Post, new { @class = "js-ajax-form mt-5" }))
{
    <partial name="_UrlForm" />
}

<div id="content-area">
    @* Container element for AJAX return SPA *@
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/url-form.js"></script>
}